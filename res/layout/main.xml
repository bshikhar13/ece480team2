<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<ScrollView android:layout_width="fill_parent" android:id="@+id/scrollView1" android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <Button android:layout_height="60dip" android:id="@+id/my_button" android:layout_width="wrap_content" android:onClick="RefreshButton" android:text="@string/refresh"></Button>
        <ScrollView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/scrollView2">
            <LinearLayout android:id="@+id/linearLayout2" android:layout_height="fill_parent" android:layout_width="fill_parent">
            </LinearLayout>
        </ScrollView>
        <TextView android:id="@+id/my_textview" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/app_name"></TextView>
    </LinearLayout>
</ScrollView>
<EditText android:text="@string/clear" android:layout_height="60dip" android:layout_width="60dip" android:id="@+id/editText1"></EditText>
</LinearLayout>
